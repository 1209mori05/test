package sample_1;

public class SampleTime {


	public static void main(String[]args){
		en(5);
		en(7);
		en(10);
		System.out.println();
		ryoukin(2,4);
		ryoukin(1,5);
		ryoukin(3,7);
		System.out.println();
		shikaku(1,2);
		shikaku(5,7);
		shikaku(10,15);
	}


	public static void en(int h){
		double menseki=h*h*3.14;
		System.out.println("半径"+h+"㎝の円の面積は"+menseki+"㎠です");
	}



	public static void ryoukin(int otona,int kodomo){
		int r=500*otona+200*kodomo;
		System.out.println("大人"+otona+"人と子供"+kodomo+"人の合計料金は"+r+"円です");
	}



	public static void shikaku(int tate,int yoko){
		int menseki=tate*yoko;
		int sankaku=menseki/2;
		System.out.print("縦"+tate+"㎝横"+yoko+"㎝ 四角形:"+menseki+"㎠");
		System.out.print("三角形:"+sankaku+"㎠");
		;
	}



}
